{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "module": "nodenext",
        "moduleResolution": "nodenext"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "dist"
    ]
}